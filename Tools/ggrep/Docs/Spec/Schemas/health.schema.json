{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ggrep://schemas/health.schema.json",
  "type": "object",
  "required": ["schema_version", "store_id", "active_snapshot_id", "ok", "checks"],
  "properties": {
    "schema_version": { "const": 1 },
    "store_id": { "type": "string" },
    "active_snapshot_id": { "type": ["string", "null"] },
    "ok": { "type": "boolean" },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["code", "severity", "message"],
        "properties": {
          "code": { "type": "string" },
          "severity": { "type": "string", "enum": ["ok", "warn", "fail"] },
          "message": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
