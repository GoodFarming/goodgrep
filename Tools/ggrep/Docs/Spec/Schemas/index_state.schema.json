{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ggrep://schemas/index_state.schema.json",
  "type": "object",
  "required": [
    "schema_version",
    "store_id",
    "canonical_root",
    "config_fingerprint",
    "ignore_fingerprint",
    "active_snapshot_id",
    "git",
    "last_sync_at",
    "last_result"
  ],
  "properties": {
    "schema_version": { "const": 1 },
    "store_id": { "type": "string" },
    "canonical_root": { "type": "string" },
    "config_fingerprint": { "type": "string" },
    "ignore_fingerprint": { "type": "string" },
    "active_snapshot_id": { "type": "string" },
    "git": {
      "type": "object",
      "required": ["last_head_sha", "dirty", "untracked_included"],
      "properties": {
        "last_head_sha": { "type": ["string", "null"] },
        "dirty": { "type": "boolean" },
        "untracked_included": { "type": "boolean" }
      },
      "additionalProperties": false
    },
    "last_sync_at": { "type": "string" },
    "last_result": { "type": "string" }
  },
  "additionalProperties": false
}
